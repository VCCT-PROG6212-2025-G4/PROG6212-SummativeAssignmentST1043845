@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font/css/materialdesignicons.min.css" rel="stylesheet" />

    <style>
        .sidebar {
            transition: width 0.3s ease-in-out;
        }

        .sidebar-collapsed {
            width: 0;
        }

        .sidebar-expanded {
            width: 250px;
        }

        .nav-active {
            color: #facc15;
        }
    </style>
</head>

<body class="bg-gray-100 flex flex-col min-h-screen">

    <!-- ============================ -->
    <!-- TOP NAVIGATION BAR -->
    <!-- ============================ -->
    <header class="bg-gray-900 text-white shadow-md fixed w-full z-20">
        <nav class="flex justify-between items-center px-6 py-4">

            <!-- Left Section -->
            <div class="flex items-center space-x-4">
                <button id="menuToggle" class="text-2xl hover:text-yellow-400 transition">
                    <i class="mdi mdi-menu"></i>
                </button>

                <a asp-controller="HR" asp-action="HRDash"
                   class="text-2xl font-semibold hover:text-yellow-400 transition flex items-center">
                    <i class="mdi mdi-account-tie text-yellow-400 mr-2"></i> CMCS HR
                </a>
            </div>

            <!-- Right Section -->
            <ul class="flex items-center gap-6 text-sm md:text-base">
                <li>
                    <a asp-controller="HR" asp-action="HRDash"
                       class="hover:text-yellow-400 transition">
                        <i class="mdi mdi-view-dashboard-outline mr-1"></i> Dashboard
                    </a>
                </li>

                <li>
                    <a asp-controller="HR" asp-action="UserManager"
                       class="hover:text-yellow-400 transition">
                        <i class="mdi mdi-school-outline mr-1"></i> Users
                    </a>
                </li>

                <li>
                    <a asp-controller="HR" asp-action="ApprovedClaims"
                       class="hover:text-yellow-400 transition">
                        <i class="mdi mdi-check-decagram-outline mr-1"></i> Approved Claims
                    </a>
                </li>

                <li>
                    <a asp-controller="HR" asp-action="CreateUser"
                       class="hover:text-yellow-400 transition">
                        <i class="mdi mdi-account-plus-outline mr-1"></i> Create User
                    </a>
                </li>
                <li>
                    <a asp-controller="HR" asp-action="ApprovedClaimsReport" class="hover:text-yellow-400 transition">
                        <i class="mdi mdi-file-chart-outline mr-1"></i> Reports
                    </a>
                </li>
                <li>
                    <a asp-controller="HR" asp-action="Invoices" class="hover:text-yellow-400 transition">
                        <i class="mdi mdi-receipt mr-1"></i> Invoices
                    </a>
                </li>

                <li>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="hover:text-yellow-400 transition flex items-center">
                            <i class="mdi mdi-logout mr-1"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>

        </nav>
    </header>

    <!-- ============================ -->
    <!-- LEFT SIDEBAR (Collapsible) -->
    <!-- ============================ -->
    <aside id="sidebar"
           class="sidebar sidebar-expanded bg-gray-800 text-white fixed top-16 bottom-0 overflow-y-auto shadow-lg">

        <div class="p-4 text-lg font-semibold border-b border-gray-700">
            <i class="mdi mdi-shield-account mr-2"></i> HR Menu
        </div>

        <ul class="mt-4 space-y-2">

            <li>
                <a asp-controller="HR" asp-action="HRDash"
                   class="flex items-center px-4 py-2 hover:bg-gray-700 transition">
                    <i class="mdi mdi-view-dashboard-outline mr-3"></i> Dashboard
                </a>
            </li>

            <li>
                <a asp-controller="HR" asp-action="UserManager"
                   class="flex items-center px-4 py-2 hover:bg-gray-700 transition">
                    <i class="mdi mdi-school mr-3"></i> Users
                </a>
            </li>

            <li>
                <a asp-controller="HR" asp-action="ApprovedClaims"
                   class="flex items-center px-4 py-2 hover:bg-gray-700 transition">
                    <i class="mdi mdi-check-decagram mr-3"></i> Approved Claims
                </a>
            </li>

            <li>
                <a asp-controller="HR" asp-action="CreateUser"
                   class="flex items-center px-4 py-2 hover:bg-gray-700 transition">
                    <i class="mdi mdi-account-plus mr-3"></i> Create User
                </a>
            </li>

        </ul>
    </aside>

    <!-- ============================ -->
    <!-- PAGE BODY (Content on right) -->
    <!-- ============================ -->
    <main class="pt-24 pl-[260px] pr-6 pb-10 transition-all" id="mainContent">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-gray-400 text-center py-3 mt-auto">
        © @DateTime.Now.Year - CMCS Web App
    </footer>

    @RenderSection("Scripts", required: false)   <!-- MUST BE BEFORE </body> -->
    <!-- Sidebar Toggle Script -->
    <script>
        const toggle = document.getElementById("menuToggle");
        const sidebar = document.getElementById("sidebar");
        const main = document.getElementById("mainContent");

        toggle.addEventListener("click", () => {
            sidebar.classList.toggle("sidebar-expanded");
            sidebar.classList.toggle("sidebar-collapsed");

            if (sidebar.classList.contains("sidebar-collapsed")) {
                main.style.paddingLeft = "20px";
            } else {
                main.style.paddingLeft = "260px";
            }
        });
    </script>

</body>
</html>


