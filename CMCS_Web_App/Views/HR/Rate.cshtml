@model CMCS_Web_App.Models.Lecturer


@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "Rate";
}
<h2>Edit Hourly Rate</h2>

<form asp-action="EditRate" method="post">
    <input type="hidden" name="id" value="@Model.LecturerId" />

    <div class="form-group">
        <label>Lecturer Name:</label>
        <strong>@Model.FirstName @Model.LastName</strong>
    </div>

    <div class="form-group mt-3">
        <label>New Hourly Rate</label>
        <input type="number" name="ratePerHour" step="0.01" class="form-control" value="@Model.RatePerHour" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>

