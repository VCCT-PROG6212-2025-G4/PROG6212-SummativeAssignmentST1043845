@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "HR Dashboard";
}

<div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-lg p-8 mt-8">

    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">HR Dashboard</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        
        <a href="/HR/UserManager"
           class="block bg-gray-900 text-white rounded-xl p-6 text-center hover:bg-gray-700 transition shadow-md">
            <h3 class="text-xl font-semibold mb-2">User Manager</h3>
            <p class="text-sm opacity-80">
                Update hourly rates and maintain user information.
            </p>
        </a>

        <!-- Approved Claims Card -->
        <a href="/HR/ApprovedClaims"
           class="block bg-green-600 text-white rounded-xl p-6 text-center hover:bg-green-500 transition shadow-md">
            <h3 class="text-xl font-semibold mb-2">Approved Claims</h3>
            <p class="text-sm opacity-80">
                View all lecturer claims that have been approved.
            </p>
        </a>

    </div>
</div>


