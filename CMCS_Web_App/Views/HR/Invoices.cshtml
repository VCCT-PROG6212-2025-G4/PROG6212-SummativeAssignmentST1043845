@model List<CMCS_Web_App.Models.Lecturer>
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "Generate Invoices";
}

<div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-6 mt-6">
    <h2 class="text-2xl font-bold mb-4">Generate Invoices</h2>

    <form asp-action="GenerateInvoices" method="post" class="grid grid-cols-1 md:grid-cols-4 gap-3">
        <select name="lecturerId" class="border p-2 rounded">
            <option value="">-- All Lecturers (batch) --</option>
            @foreach (var l in Model)
            {
                <option value="@l.LecturerId">@l.FirstName @l.LastName (@l.Email)</option>
            }
        </select>

        <input type="date" name="from" class="border p-2 rounded" required />
        <input type="date" name="to" class="border p-2 rounded" required />

        <select name="output" class="border p-2 rounded">
            <option value="pdf">PDF</option>
            <option value="html">HTML</option>
        </select>

        <div class="md:col-span-4">
            <button class="bg-blue-600 text-white px-4 py-2 rounded">Generate</button>
        </div>
    </form>

    <p class="text-sm text-gray-500 mt-3">You can create a single lecturer invoice or generate a zipped batch of invoices for all lecturers.</p>
</div>

