@model IEnumerable<CMCS_Web_App.Models.Claim>
@{
    ViewData["Title"] = "Approved Claims";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}

<div class="p-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Approved Claims</h1>

    <div class="overflow-x-auto bg-white shadow-lg rounded-lg p-6">
        <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="border-b font-medium text-gray-900">
                <tr>
                    <th class="px-4 py-3">Claim ID</th>
                    <th class="px-4 py-3">Lecturer</th>
                    <th class="px-4 py-3">Hours Worked</th>
                    <th class="px-4 py-3">Rate (R/hr)</th>
                    <th class="px-4 py-3">Total Amount</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var claim in Model)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-4 py-3">@claim.ClaimId</td>
                        <td class="px-4 py-3">
                            @claim.Lecturer.FirstName @claim.Lecturer.LastName
                        </td>
                        <td class="px-4 py-3">@claim.HoursWorked</td>
                        <td class="px-4 py-3">R @claim.Lecturer.RatePerHour</td>
                        <td class="px-4 py-3 font-semibold text-green-700">
                            R @(claim.HoursWorked* claim.Lecturer.RatePerHour)
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>