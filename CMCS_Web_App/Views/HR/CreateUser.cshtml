@model CreateUserVM
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white rounded-2xl shadow p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Create New User</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 p-4 bg-green-100 text-green-700 rounded-xl">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="CreateUser" method="post" class="space-y-5">

        <div>
            <label class="block text-gray-700 font-medium mb-1">First Name</label>
            <input asp-for="FirstName"
                   class="w-full p-2 border rounded-lg" />
            <span asp-validation-for="FirstName" class="text-red-600"></span>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Last Name</label>
            <input asp-for="LastName"
                   class="w-full p-2 border rounded-lg" />
            <span asp-validation-for="LastName" class="text-red-600"></span>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Email</label>
            <input asp-for="Email"
                   class="w-full p-2 border rounded-lg" />
            <span asp-validation-for="Email" class="text-red-600"></span>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Password</label>
            <input asp-for="Password"
                   class="w-full p-2 border rounded-lg" type="password" />
            <span asp-validation-for="Password" class="text-red-600"></span>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Role</label>
            <select asp-for="Role"
                    class="w-full p-2 border rounded-lg">
                <option value="">-- Select --</option>
                <option value="HR">HR</option>
                <option value="Lecturer">Lecturer</option>
                <option value="Manager">Manager</option>
                <option value="Coordinator">Coordinator</option>
            </select>
            <span asp-validation-for="Role" class="text-red-600"></span>
        </div>

        <button type="submit"
                class="px-5 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium">
            Create User
        </button>
    </form>
</div>

