@model CreateUserVM
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}

<div class="p-8 max-w-3xl mx-auto">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 p-4 text-green-800 bg-green-200 border border-green-400 rounded-lg">
            @TempData["SuccessMessage"]
        </div>
    }

    <h1 class="text-3xl font-bold mb-6 text-gray-800">Create User</h1>

    <form asp-action="CreateUser" method="post" class="space-y-6 bg-white shadow-lg p-6 rounded-lg">

        <div>
            <label class="block font-semibold mb-1">First Name</label>
            <input asp-for="FirstName"
                   class="w-full border px-4 py-2 rounded" />
            <span asp-validation-for="FirstName" class="text-red-600"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Last Name</label>
            <input asp-for="LastName"
                   class="w-full border px-4 py-2 rounded" />
            <span asp-validation-for="LastName" class="text-red-600"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Email</label>
            <input asp-for="Email"
                   class="w-full border px-4 py-2 rounded" />
            <span asp-validation-for="Email" class="text-red-600"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Password</label>
            <input asp-for="Password" type="password"
                   class="w-full border px-4 py-2 rounded" />
            <span asp-validation-for="Password" class="text-red-600"></span>
        </div>

        <div>
            <label class="block font-semibold mb-1">Role</label>
            <select asp-for="Role" class="w-full border px-4 py-2 rounded">
                <option value="">Select role...</option>
                <option value="Coordinator">Coordinator</option>
                <option value="Manager">Manager</option>
                <option value="Lecturer">Lecturer</option>
                <option value="HR">HR</option>
            </select>
            <span asp-validation-for="Role" class="text-red-600"></span>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 font-semibold">
            Create User
        </button>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
