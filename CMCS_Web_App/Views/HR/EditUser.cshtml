@model EditUserVM
@{
    ViewData["Title"] = "Edit User";
}

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit User</h2>

    <form asp-action="EditUser" method="post" class="space-y-4">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="LecturerId" />

        <!-- First Name -->
        <div>
            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="FirstName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Last Name -->
        <div>
            <label asp-for="LastName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="LastName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <!-- Role -->
        <div>
            <label asp-for="Role" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="Role" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option value="Admin">Admin</option>
                <option value="HR">HR</option>
                <option value="Lecturer">Lecturer</option>
                <option value="Student">Student</option>
            </select>
            <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
        </div>

        <!-- Lecturer-specific fields -->
        @if (Model.Role == "Lecturer")
        {
            <div>
                <label asp-for="Department" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Department" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Department" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="RatePerHour" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="RatePerHour" type="number" step="0.01" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="RatePerHour" class="text-red-500 text-sm"></span>
            </div>
        }

        <!-- Submit -->
        <div class="flex justify-end space-x-4 mt-6">
            <a asp-action="UserManager" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">Cancel</a>
            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
