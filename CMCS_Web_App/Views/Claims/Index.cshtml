@model IEnumerable<CMCS_Web_App.Models.Claim>

@{
    ViewData["Title"] = "Index";
}

<h1>Claims</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.HoursWorked)</td>
                <td>@Html.DisplayFor(modelItem => item.HourlyRate)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClaimId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClaimId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClaimId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
