@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto mt-16 bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">CMCS Login</h2>

    <form method="post" asp-action="Login">
        <div class="mb-4">
            <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
            <input type="email" name="email" id="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400" required />
        </div>

        <div class="mb-6">
            <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
            <input type="password" name="password" id="password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400" required />
        </div>

        <button type="submit" class="w-full bg-yellow-400 hover:bg-yellow-500 text-white font-bold py-2 px-4 rounded-lg transition">
            Login
        </button>

        @* <form asp-controller="Home" asp-action="Logout" method="post">
            <button type="submit" class="hover:text-yellow-400 transition">
                <i class="mdi mdi-logout mr-1"></i> Logout
            </button>
        </form> *@


        @if (ViewBag.Error != null)
        {
            <p class="text-red-600 text-sm mt-4 text-center">@ViewBag.Error</p>
        }
    </form>
</div>

