@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-10 space-y-8">

    <!-- ASCII Welcome Banner -->
    <pre class="text-yellow-400 text-sm md:text-base font-mono leading-tight whitespace-pre">
  ____ _   _  ____ ___ ____  
 / ___| | | |/ ___|_ _/ ___| 
| |   | | | | |    | | |     
| |___| |_| | |___ | | |___  
 \____|\___/ \____|___\____| 
    </pre>

    <h1 class="text-3xl md:text-4xl font-bold text-gray-800">
        Welcome to <span class="text-yellow-500">CMCS</span>
    </h1>
    <p class="text-gray-600 text-lg">Contract Monthly Claim System</p>

    <!-- Claim Summary Buttons -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-8">
        <a asp-controller="Reports" asp-action="Index"
           class="bg-blue-600 hover:bg-blue-700 text-white py-6 rounded-2xl shadow-md flex flex-col items-center">
            <i class="mdi mdi-clipboard-text text-3xl mb-2"></i>
            <span class="font-semibold text-lg">Total Claims</span>
        </a>

        <a asp-controller="Reports" asp-action="Index"
           class="bg-green-600 hover:bg-green-700 text-white py-6 rounded-2xl shadow-md flex flex-col items-center">
            <i class="mdi mdi-check-circle text-3xl mb-2"></i>
            <span class="font-semibold text-lg">Approved Claims</span>
        </a>

        <a asp-controller="Reports" asp-action="Index"
           class="bg-yellow-500 hover:bg-yellow-600 text-white py-6 rounded-2xl shadow-md flex flex-col items-center">
            <i class="mdi mdi-timer-sand text-3xl mb-2"></i>
            <span class="font-semibold text-lg">Pending Claims</span>
        </a>

        <a asp-controller="Reports" asp-action="Index"
           class="bg-red-600 hover:bg-red-700 text-white py-6 rounded-2xl shadow-md flex flex-col items-center">
            <i class="mdi mdi-close-circle text-3xl mb-2"></i>
            <span class="font-semibold text-lg">Rejected Claims</span>
        </a>
    </div>

    </div>


