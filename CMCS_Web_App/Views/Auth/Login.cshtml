@model CMCS_Web_App.Models.LoginVM
@{
    Layout = null; // Login page should not use dashboards or sidebars
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="bg-white w-full max-w-md p-8 rounded-2xl shadow-lg">

            <!-- Title -->
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
                CMCS Login
            </h2>

            <!-- Validation Summary -->
            @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-sm mb-4" })

            <!-- Form -->
            <form asp-action="Login" asp-controller="Auth" method="post">
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div class="mb-4">
                    <label asp-for="Email" class="block text-gray-700 font-semibold mb-1">Email</label>
                    <input asp-for="Email"
                           class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-gray-800"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <!-- Password -->
                <div class="mb-6">
                    <label asp-for="Password" class="block text-gray-700 font-semibold mb-1">Password</label>
                    <input asp-for="Password"
                           type="password"
                           class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-gray-800"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <!-- Submit -->
                <button type="submit"
                        class="w-full bg-gray-900 text-white py-3 rounded-lg hover:bg-gray-700 transition duration-150 font-semibold">
                    Login
                </button>
            </form>

            <!-- Footer -->
            <p class="text-center text-gray-500 text-sm mt-6">
                CMCS Claims Management System
            </p>

        </div>
    </div>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
