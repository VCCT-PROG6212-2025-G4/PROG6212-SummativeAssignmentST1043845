@model IEnumerable<CMCS_Web_App.Models.Claim>
@{
    ViewData["Title"] = "Claims Report";
}

<div class="max-w-6xl mx-auto bg-white shadow-md rounded-2xl p-8 mt-8">
    <h2 class="text-2xl font-bold mb-4 text-center text-gray-800">Claims Overview</h2>

    <table class="min-w-full mt-8 bg-white rounded-xl shadow-md">
        <thead class="bg-gray-900 text-white">
            <tr>
                <th class="px-4 py-2 text-left">Lecturer</th>
                <th class="px-4 py-2 text-left">Hours Worked</th>
                <th class="px-4 py-2 text-left">Hourly Rate</th>
                <th class="px-4 py-2 text-left">Total</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr class="border-b hover:bg-gray-100">
                    <td class="px-4 py-2">@($"{claim.FirstName} {claim.LastName}")</td>
                    <td class="px-4 py-2">@claim.HoursWorked</td>
                    <td class="px-4 py-2">@claim.HourlyRate.ToString("C")</td>
                    <td class="px-4 py-2">@claim.TotalAmount.ToString("C")</td>
                    <td class="px-4 py-2">
                        <span class="px-2 py-1 rounded-full text-white
                            @(claim.Status == ClaimStatus.Approved ? "bg-green-600" :
                                                        claim.Status == ClaimStatus.Pending ? "bg-yellow-500" :
                                                        "bg-red-600")">
                        @claim.Status
                    </span>
                </td>
                <td class="px-4 py-2">@claim.DateSubmitted.ToShortDateString()</td>
            </tr>
                        }
        </tbody>
    </table>


    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-blue-600 text-white text-center p-4 rounded-xl shadow">
            <div class="text-3xl font-bold">@ViewBag.TotalClaims</div>
            <div>Total Claims</div>
        </div>
        <div class="bg-green-600 text-white text-center p-4 rounded-xl shadow">
            <div class="text-3xl font-bold">@ViewBag.ApprovedClaims</div>
            <div>Approved</div>
        </div>
        <div class="bg-yellow-500 text-white text-center p-4 rounded-xl shadow">
            <div class="text-3xl font-bold">@ViewBag.PendingClaims</div>
            <div>Pending</div>
        </div>
        <div class="bg-red-600 text-white text-center p-4 rounded-xl shadow">
            <div class="text-3xl font-bold">@ViewBag.RejectedClaims</div>
            <div>Rejected</div>
        </div>
    </div>
</div>

